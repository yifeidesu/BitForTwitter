<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <!-- parent text styles to extend -->
    <style name="parent.text.light" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="parent.text" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- tweet in list -->

    <style name="tweet.userNameText" parent="parent.text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="tweet.screenNameText" parent="parent.text.light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="tweet.entitiesText" parent="parent.text.light">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="notesText" parent="parent.text.light">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_overlay</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--tweet solo-->

    <style name="tweet.userNameTextSolo" parent="parent.text">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="tweet.screenNameTextSolo" parent="parent.text.light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="tweet.entitiesTextSolo" parent="parent.text.light">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--retweet solo-->


    <!--retweet in list-->
    <style name="tweet.userNameRetweet" parent="parent.text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="tweet.screenNameRetweet" parent="parent.text.light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="tweet.entitiesTextRetweet" parent="parent.text.light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!--following-->
    <style name="tweet.followingText" parent="parent.text.light">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="tweet.followingCount" parent="parent.text">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
